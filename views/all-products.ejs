<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="css/slick.css"/>
    <link type="text/css" rel="stylesheet" href="css/slick-theme.css"/>
    <link type="text/css" rel="stylesheet" href="css/nouislider.min.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="stylesheet" href="/css/styles.css">
    <title><%- title %></title>
</head>
<body>
    <header>
        <%- include ('layouts/header') %>
    </header>

    <div class="container">
        <%- messages('messages', locals) %>
        <% if (errors) {%>
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
            <% });%>
        <% }%>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-xs-6">
						<div class="shop">
							<div class="shop-img">
								<img src="/images/all.jpg" alt="">
							</div>
							<div class="shop-body">
								<h3>All<br>Collection</h3>
								<a href="/products" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>

                    <div class="col-md-4 col-xs-6">
						<div class="shop">
							<div class="shop-img">
								<img src="/images/phone.jpg" alt="">
							</div>
							<div class="shop-body">
								<h3>Phone<br>Collection</h3>
								<a href="/products/phone" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>

                    <div class="col-md-4 col-xs-6">
						<div class="shop">
							<div class="shop-img">
								<img src="/images/laptop.jpg" alt="">
							</div>
							<div class="shop-body">
								<h3>Laptop<br>Collection</h3>
								<a href="/products/laptop" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>

                    
                </div>
            </div>
        </div>

        <h3 style="text-decoration: underline;" class="mt-5">Newest Products For You</h3>

        <div class="row mt-5">
            <% products.forEach(function(product) { %>
                <div class="col-md-4">
                    <div class="product-card bg-white mb-4 overflow-hidden d-lg-flex flex-column rounded-lg position-relative">
                    <div class="product-image overflow-hidden">
                            <a href="/products/<%= product.category %>/<%= product.slug %>">
                                <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="product-thumbnail rounded-lg">
                            </a>
                    </div>
                    <div class="p-4 product-details">
                        <h4 class="font-weight-bold d-flex justify-content-between">
                        <a href="#!" class="text-dark text-truncate--2" title="<%= product.title %>">
                            <%= product.title %>
                        </a>
                        </h4>
                        <a href="#!" class="text-uppercase py-0 px-2 rounded-lg border mb-2 d-inline-block">
                        <small class="font-weight-bold">Decoration</small>
                        </a>
                        
                        <div class="d-flex align-items-center mb-2">
                        <div class="rating-stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        </div>
                        <div class="d-flex align-items-baseline mb-2">
                        <h2 class="mr-2"><%= parseFloat(product.price).toFixed() %><span> VNĐ</span></h2>
                        </div>
                        <a href="/products/<%= product.category %>/<%= product.slug %>" class="btn btn-outline-primary">View Details</a>
                    </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <h3 style="text-decoration: underline;" class="mt-5">Phone</h3>

        <div class="row mt-5">
            <% products.forEach(function(product) { %>
                <% if (product.category == 'phone') { %>
                    <div class="col-md-4">
                        <div class="product-card bg-white mb-4 overflow-hidden d-lg-flex flex-column rounded-lg position-relative">
                        <div class="product-image overflow-hidden">
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="product-thumbnail rounded-lg">
                                </a>
                        </div>
                        <div class="p-4 product-details">
                            <h4 class="font-weight-bold d-flex justify-content-between">
                            <a href="#!" class="text-dark text-truncate--2" title="<%= product.title %>">
                                <%= product.title %>
                            </a>
                            </h4>
                            <a href="#!" class="text-uppercase py-0 px-2 rounded-lg border mb-2 d-inline-block">
                            <small class="font-weight-bold">Decoration</small>
                            </a>
                            
                            <div class="d-flex align-items-center mb-2">
                            <div class="rating-stars">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            </div>
                            <div class="d-flex align-items-baseline mb-2">
                            <h2 class="mr-2"><%= parseFloat(product.price).toFixed() %><span> VNĐ</span></h2>
                            </div>
                            <a href="/products/<%= product.category %>/<%= product.slug %>" class="btn btn-outline-primary">View Details</a>
                        </div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>

        <a class="see-more" href="/products/phone">See More <i class="fas fa-arrow-right"></i></a>

        <h3 style="text-decoration: underline;" class="mt-5">Laptop</h3>

        <div class="row mt-5">
            <% products.forEach(function(product) { %>
                <% if (product.category == 'laptop') { %>
                    <div class="col-md-4">
                        <div class="product-card bg-white mb-4 overflow-hidden d-lg-flex flex-column rounded-lg position-relative">
                        <div class="product-image overflow-hidden">
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="product-thumbnail rounded-lg">
                                </a>
                        </div>
                        <div class="p-4 product-details">
                            <h4 class="font-weight-bold d-flex justify-content-between">
                            <a href="#!" class="text-dark text-truncate--2" title="<%= product.title %>">
                                <%= product.title %>
                            </a>
                            </h4>
                            <a href="#!" class="text-uppercase py-0 px-2 rounded-lg border mb-2 d-inline-block">
                            <small class="font-weight-bold">Decoration</small>
                            </a>
                            
                            <div class="d-flex align-items-center mb-2">
                            <div class="rating-stars">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            </div>
                            <div class="d-flex align-items-baseline mb-2">
                            <h2 class="mr-2"><%= parseFloat(product.price).toFixed() %><span> VNĐ</span></h2>
                            </div>
                            <a href="/products/<%= product.category %>/<%= product.slug %>" class="btn btn-outline-primary">View Details</a>
                        </div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>

        <a class="see-more" href="/products/laptop">See More <i class="fas fa-arrow-right"></i></a>



    </div>

    <footer id="footer">
        <%- include ('layouts/footer') %> 
    </footer>  

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</body>
</html>